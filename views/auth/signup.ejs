<head>
  <link rel='stylesheet' href='/css/signup.css'>
</head>
<form class='signup-form' action="/auth/signup" method="POST">
  <div>Sign Up</div>
  <div class="form-group">
    <label for="authEmail">Email</label>
    <input id="authEmail" class="form-control" type="email" name="email" required>
  </div>

  <div class="form-group">
    <label for="authName">Name</label>
    <input id="authName" class="form-control" type="text" name="name" required>
  </div>

  <div class="form-group">
    <label for="authPassword">Password</label>
    <input id="authPassword" class="form-control" type="password" name="password" required>
  </div>
  
  <div class="form-group">
    <label for="bio">Bio</label>
    <input id="bio" class="form-control" type="text" name="bio">
  </div>

  <button>Register</button>
</form>

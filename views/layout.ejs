  <body>
    <nav> 
      <% let url ; %>
      <% if (!currentUser){ %>
        <% url = '/' %>
      <%} else{ %>
        <% url = '/chords' %>
      <%} %> 
      <a class="logo-link" href=<%= url%> >
      <div class="logo" >
        <img src='/img/logo.png' alt="logo"/>
        Scalakor
      </div>
    </a>
      <div class="form-container">
          <% if (!currentUser){ %>
            <a class="signup" href="/auth/signup">SIGN UP</a> <span>|</span>
            <form action="/auth/login" method='POST'>
              <div >
                <input id="authEmail" class="form-control" type="email" name="email" placeholder="Email">
              </div>
            
              <div> 
                <input id="authPassword" class="form-control" type="password" name="password" placeholder="Password">
              </div>
              <button>Login</button>
            </form>
        <% } else{ %>

              <p>Hello, <%= currentUser.name %> ! </p> <span> </span>
              <a href="/auth/logout">Logout</a>
              <a href="/profile">Profile</a>
         
            
        <% } %>
      </div>
        
    </nav>
    <div class="container">
      <% include partials/alerts %>
      <%- body %>
    </div>

